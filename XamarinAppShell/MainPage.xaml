<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinAppShell.MainPage"
             xmlns:local="clr-namespace:XamarinAppShell.ViewModels">
    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">
            <Label x:Name="Field1"/>
            <Label x:Name="Field2"/>
            <Label x:Name="Field3"/>
            <Label x:Name="Field4"/>
            <Label x:Name="Field5"/>
            <Button 
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

            <Button x:Name="PopUpBtn"
                    Text="Generate PopUp" Clicked="PopUpBtn_Clicked" HorizontalOptions="Center"/>

            <Button x:Name="ToastButton"
                    Text="Generate Toast"
                    Clicked="ToastButton_Clicked" 
                    HorizontalOptions="Center"/>

            <Button x:Name="BtnLogOut"
                    Text="LogOut"
                    Clicked="BtnLogOut_Clicked"
                    IsVisible="True"
                    HorizontalOptions="Center"/>

           

        </VerticalStackLayout>
    </ScrollView>
 
</ContentPage>
